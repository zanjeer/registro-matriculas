        </div>
        <div class="col-md-2">
          <%= f.select :numero_hermanos, 0..15, {:include_blank => true}, {class: "form-control"} %>
        </div>

        <div class="col-md-2 text-left">
          <h5>Lugar que ocupa:</h5>
        </div>
        <div class="col-md-2">
          <%= f.select :posicion_familia, 1..15, {:include_blank => true}, {class: "form-control"} %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-2 col-md-offset-1">
          <h5>Sistema de Salud:</h5>
        </div>
        <div class="col-md-2">
          <%= f.select :sistema_salud, [['Fonasa'], ['Isapre'], ['Particular'], ['Sin sistema']],
          {:include_blank => true}, {class: "form-control"} %>
        </div>

        <div class="col-md-2">
          <h5>Ingreso Grupo Familiar:</h5>
        </div>
        <div class="col-md-2">
          <%=  f.number_field :ingreso_familiar, class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-2 col-md-offset-1 text-left">
          <h5>Vive Con:</h5>
        </div>
        <div class="col-md-1">
          <div class="radio-inline">
            <!-- ORDEN radio -> label -->
            <%= f.radio_button :vive_con, "Padre" %>
            <%= f.label :vive_con, "Padre", :value => "Padre"  %>
            <%= f.radio_button :vive_con, "Madre" %>
            <%= f.label :vive_con, "Madre", :value => "Madre" %>
            <%= f.radio_button :vive_con, "Padres" %>
            <%= f.label :vive_con, "Padres", :value => "Padres" %>
          </div>
        </div>
        <div class="col-md-2">
          <div class="radio-inline">
            <%= f.radio_button :vive_con, "Abuelos" %>
            <%= f.label :vive_con, "Abuelos", :value => "Abuelos" %>
            <%= f.radio_button :vive_con, "Otro" %>
            <%= f.label :vive_con, "Otro", :value => "Otro" %>
            <input id="input_otro" type="text" class="form-control" value="<%= @alumno.vive_con %>" disabled>
          </div>
        </div>

        <div class="col-md-2 col-md-offset-1">
          <h5>Subsidio Familiar:</h5>
        </div>
        <div class="col-md-2">
          <div class="radio-inline">
            <%= f.radio_button :subsidio_familiar, "true" %>
            <%= f.label :subsidio_familiar, "Si", :value => true  %>
            <%= f.radio_button :subsidio_familiar, "false" %>
            <%= f.label :subsidio_familiar, "No", :value => false %>
          </div>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-md-6 col-md-offset-1">
          <div class="form-group">
            <div class="checkbox-inline">
              <%= f.check_box :necesita_alimento %>
              <%= f.label :necesita_alimento, 'Necesita Alimentacion?' %>
            </div>
            <div class="checkbox-inline">
              <%= f.check_box :protec_social %>
              <%= f.label :protec_social, 'Ficha proteccion Social' %>
            </div>
          </div>
        </div>

      </div>

      <!-- SEPARADORX -->
      <hr>

      <div class="row">
        <div class="row">
          <div class="col-md-3 col-md-offset-1">
            <legend>Datos de la Madre:</legend>
            <div class="row">
              <div class="col-md-4">
                <h5>Nombre:</h5>
              </div>
              <div class="col-md-8">
                <%= f.text_field :madre_nombre, class: "form-control" %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-4">
                <h5>RUT:</h5>
              </div>
              <div class="col-md-8" id="error_rut_madre">
