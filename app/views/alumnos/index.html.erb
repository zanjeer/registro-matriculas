<div class="col-md-6">
  <div class="text-center">
    <h1>
      Lista Alumnos
      <%= link_to 'Nuevo Alumno', new_alumno_path, :class => "btn btn-success" %>
    </h1>

    <div class="row">

      <div class="col-md-12">
        <%= form_tag(alumnos_path, :method => "get", id: "search-form") do %>

          <%= text_field_tag :search, params[:search], class: "search-query form-control",
              placeholder: "Buscar por Nombre, Apellidos, Rut", type: "search",
              data: {autocomplete: alumnos_autocomplete_alumno_nombres_path} %>

        <% end %>
      </div>

    </div>

    <script type="text/javascript" charset="utf-8">
      
      $('#search').bind('railsAutocomplete.select', function(event, data){
        $('#search-form').submit()
      });
    </script>


  </div>
  <br>
  <table class="table table-hover">
    <tr  class="success">
      <th>Nombre</th>
      <th>Rut</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>

    <tbody id="alum_body">
      <% @alumnos.each do |alumno| %>
        <tr>
          <td><%= "#{alumno.nombre_completo}" %></td>
          <td><%= alumno.rut %></td>
          <td><%= alumno.telefono %></td>

          <td><%= link_to 'Ver', alumno %></td>
          <td><%= link_to 'Editar', edit_alumno_path(alumno) %></td>
          <td><%= link_to 'Eliminar', alumno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-6">
  <div class="text-center">
    <h1>
      Lista Informes
    </h1>
  </div>
</div>

<br>
