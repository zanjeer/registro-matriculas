<div class="col-md-6">
  <div class="text-center">
    <h1>
      Lista Alumnos
      <%= link_to 'Nuevo Alumno', new_alumno_path, :class => "btn btn-success" %>
    </h1>

    <div class="row">
      <%= form_tag(alumnos_path, :method => "get", id: "search-form") do %>
        <!-- text field tag=action,args,identifier,placeholdertext... -->
        <div class="col-md-10">
          <%= text_field_tag :search, params[:search], class: "search-query form-control",
          placeholder: "Nombre Alumno", type: "search", fields: { nombres: "#nombres", rut: "#rut" },
          data: {autocomplete: alumnos_autocomplete_alumno_nombres_path} %>
        </div>
        <div class="col-md-2">
          <%= submit_tag "Buscar", class: "btn btn-default" %>
        </div>
      <%end%>
    </div>



  </div>
  <br>
  <table class="table table-hover">
    <tr  class="success">
      <th>Nombre</th>
      <th>Rut</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>

    <tbody id="alum_body">
      <% @alumnos.each do |alumno| %>
        <tr>
          <td><%= "#{alumno.nombres.upcase}  #{alumno.paterno.upcase} #{alumno.materno.upcase}" %></td>
          <td><%= alumno.rut %></td>
          <td><%= alumno.telefono %></td>

          <td><%= link_to 'Ver', alumno %></td>
          <td><%= link_to 'Editar', edit_alumno_path(alumno) %></td>
          <td><%= link_to 'Eliminar', alumno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-6">
  <div class="text-center">
    <h1>
      Lista Informes
    </h1>
  </div>
</div>

<br>
