                                                ['Asalariado sector Privado'],['Asalariado sector publico'],
                                                ['Servicio Domestico Puertas Adentro'],['Servicio Domestico Puertas Afuera'],
                                                ['Trabajo Familiar No remunerado'],['Jubilado o Pensionado'],['Dueña de casa'],
                                                ['Estudiante'],['No sabe o no Aplica']],{:include_blank => true},
                                                class: "form-control" %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-4">
                <h5>Escolaridad:</h5>
              </div>
              <div class="col-md-8">
                <%= f.select :madre_escolaridad,[['Sin Educacion'],['Basica Completa'],['Basica Incompleta'],
                                                ['Media Completa'],['Media Incompleta'],['Tecnica Completa'],
                                                ['Tecnica Incompleta'],['Superior Completa'],['Superior Incompleta']],
                                                {:include_blank => true}, class: "form-control" %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-4">
                <h5>Direccion:</h5>
              </div>
              <div class="col-md-8">
                <%= f.text_area :madre_direccion, class: "form-control" %>
              </div>
            </div>


            <br>
          </div>

          <div class="col-md-3">
            <legend>Datos del Padre:</legend>
            <div class="row">
              <div class="col-md-4">
                <h5>Nombre:</h5>
              </div>
              <div class="col-md-8">
                <%= f.text_field :padre_nombre, class: "form-control" %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-4">
                <h5>RUT:</h5>
