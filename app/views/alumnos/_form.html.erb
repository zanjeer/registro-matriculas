        <div class="col-md-3 col-md-offset-1 text-left">
          <h5>Curso:</h5>
        </div>
        <div class="col-md-2">
          <%= f.select :curso, [["Pre-Kinder A"], ["Pre-Kinder B"], ["Kinder A"], ["Kinder B"],
                                ["1° A"], ["1° B"], ["2° A"], ["2° B"],
                                ["3° A"], ["3° B"], ["4° A"], ["4° B"],
                                ["5° A"], ["5° B"], ["6° A"], ["6° B"],
                                ["7° A"], ["7° B"], ["8° A"], ["8° B"] ],
