
<%= form_for @alumno do |f| %>
  <% if @alumno.errors.any? %>
    <div id="error_explanation" class="alert alert-warning">
      <h2>No se pudo guardar por <%= pluralize(@alumno.errors.count, "problema") %>:</h2>

      <ul>
      <% @alumno.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs text-right" role="tablist">
    <li role="presentation" class="active"><a href="#alumno" aria-controls="alumno" role="tab" data-toggle="tab">Alumno</a></li>
    <li role="presentation"><a href="#salud" aria-controls="salud" role="tab" data-toggle="tab">Salud</a></li>
    <li role="presentation"><a href="#familia" aria-controls="familia" role="tab" data-toggle="tab">Familia</a></li>

    <!-- BOTON -->
    <%= f.submit "Guardar", class: 'btn btn-primary' %>

  </ul>

  <!-- Tab panes -->
  <div class="tab-content">

    <!-- ALUMNO -->
    <div role="tabpanel" class="tab-pane active" id="alumno">
      <br>

      <div class="row">
        <div class="col-md-3 col-md-offset-1 text-left">
          <h5>Nombre Alumno:</h5>
        </div>
        <div class="col-md-2">
          <%= f.text_field :nombres, placeholder: "Nombres", class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.text_field :paterno, placeholder: "Apellido Paterno", class: "form-control"%>
        </div>
        <div class="col-md-2">
          <%= f.text_field :materno, placeholder: "Apellido Materno", class: "form-control" %>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-md-3 col-md-offset-1 text-left">
          <h5>R.U.T:</h5>
        </div>
        <div class="col-md-2" id="error_rut">
            <%= f.text_field :rut , placeholder: "XXXXXXXX-X", class: "form-control"%>
        </div>

        <div class="col-md-2 text-left">
          <h5>Genero:</h5>
        </div>
        <div class="col-md-2">
          <%= f.select :genero, [['Masculino'], ['Femenino']],
          {:include_blank => true}, {class: "form-control"} %>
        </div>


      </div>
      <br>

      <div class="row">
        <div class="col-md-3 col-md-offset-1 text-left">
          <h5>Fecha de Nacimiento:</h5>
        </div>
        <div class="col-md-2">
          <%= f.date_field :f_nacimiento, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <h5>Telefono:</h5>
        </div>
        <div class="col-md-2">
          <%= f.number_field :telefono, class: "form-control" %>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-md-3 col-md-offset-1 text-left">
          <h5>Comuna:</h5>
        </div>
        <div class="col-md-2">
          <%= f.text_field :comuna, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <h5>Domicilio:</h5>
        </div>
        <div class="col-md-2">
          <%= f.text_area :domicilio, class: "form-control", rows: "5" %>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-3 col-md-offset-1 text-left">
          <h5>Colegio de Procedencia:</h5>
        </div>
        <div class="col-md-2">
          <%= f.text_field :procedencia, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <h5>Cursos Repetidos:</h5>
        </div>
        <div class="col-md-2">
          <%= f.text_field :cur_repetidos, class: "form-control" %>
        </div>
      </div>
      <br>
