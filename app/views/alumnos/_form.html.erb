        <div class="col-md-2">
          <h5>Causa de Retiro:</h5>
        </div>
        <div class="col-md-2">
          <%= f.text_area :causa_retiro, {class: "form-control"} %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-3 col-md-offset-1">
          <h5>Estado Matricula:</h5>
        </div>
        <div class="col-md-2">
          <%= f.select :estado, [['Activa'], ['Retirado']],
          {:include_blank => false}, {class: "form-control"} %>
