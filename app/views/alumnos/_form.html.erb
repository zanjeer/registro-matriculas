            </div>
            <br>
            <div class="row">
              <div class="col-md-4">
                <h5>Direccion:</h5>
              </div>
              <div class="col-md-8">
                <%= f.text_area :padre_direccion, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="col-md-3">
            <legend>Datos del Apoderado:</legend>
            <div class="row">
              <div class="col-md-4">
                <h5>Nombre:</h5>
              </div>
              <div class="col-md-8">
                <%= f.text_field :apoderado_nombre, class: "form-control" %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-4">
                <h5>RUT:</h5>
